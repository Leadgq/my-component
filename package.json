{
  "name": "@your-org/components",
  "version": "1.0.0",
  "description": "Vue 3 Component Library based on Element Plus",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "build": "pnpm -r --filter=./packages run build",
