    "@vitejs/plugin-vue": "^4.5.0",
    "@vitejs/plugin-vue-jsx": "^3.0.0",
    "element-plus": "^2.6.0",
    "sass-embedded": "^1.97.3",
    "typescript": "^5.3.0",
    "unplugin-vue-components": "^31.0.0",
    "vite": "^5.0.0",
    "vitepress": "^1.0.0",
    "vue": "^3.3.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@unhead/vue"
      ]
    }
  },
  "dependencies": {
    "vite-plugin-dts": "^4.5.4"
  }
